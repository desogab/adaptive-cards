{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://about.gitlab.com/images/press/logo/png/gitlab-icon-rgb.png",
                  "size": "Small",
                  "width": "32px"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${eventIcon} GitLab Push Event",
                  "weight": "Bolder",
                  "size": "Medium",
                  "color": "Accent"
                },
                {
                  "type": "TextBlock",
                  "text": "${userDisplayName} pushed to repository",
                  "size": "Small",
                  "spacing": "None",
                  "isSubtle": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "${userAvatar}",
                  "size": "Small",
                  "style": "Person"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "üìÅ **${projectName}**",
          "size": "Large",
          "weight": "Bolder",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "${projectFullPath}",
          "size": "Small",
          "color": "Accent",
          "spacing": "None"
        }
      ]
    },
    {
      "type": "FactSet",
      "spacing": "Medium",
      "facts": [
        {
          "title": "üë§ User:",
          "value": "${userDisplayName}"
        },
        {
          "title": "üåø Branch:",
          "value": "${branchName}"
        },
        {
          "title": "üìä Commits:",
          "value": "${commitCountText}"
        },
        {
          "title": "üîí Protection:",
          "value": "${protectionStatus}"
        },
        {
          "title": "üÜî Project:",
          "value": "#${projectId}"
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "üìù **Latest Commit:**",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "Container",
          "items": [
            {
              "type": "TextBlock",
              "text": "**${commitTitle}**",
              "wrap": true,
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "${shortCommitMessage}",
              "wrap": true,
              "spacing": "None",
              "maxLines": 3
            },
            {
              "type": "ColumnSet",
              "spacing": "Small",
              "columns": [
                {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "üë§ ${commitAuthor}",
                      "size": "Small",
                      "color": "Accent"
                    }
                  ]
                },
                {
                  "type": "Column",
                  "width": "auto",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "üïí ${formattedTimestamp}",
                      "size": "Small",
                      "isSubtle": true
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "üìä **File Changes:**",
          "weight": "Bolder",
          "size": "Small"
        },
        {
          "type": "FactSet",
          "spacing": "Small",
          "facts": [
            {
              "title": "‚ûï Added:",
              "value": "${filesAdded} files"
            },
            {
              "title": "üìù Modified:",
              "value": "${filesModified} files"
            },
            {
              "title": "‚ûñ Removed:",
              "value": "${filesRemoved} files"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "üè† Open Repository",
      "url": "${projectUrl}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "üîç View Commit",
      "url": "${commitUrl}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "üìã Branch History",
      "url": "${branchCommitsUrl}"
    },
    {
      "type": "Action.OpenUrl",
      "title": "üìß Contact User",
      "url": "mailto:${userEmail}"
    }
  ]
}
